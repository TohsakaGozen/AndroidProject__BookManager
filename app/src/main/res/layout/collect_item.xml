<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">
    <ImageView
        android:id="@+id/collect_book_info_img"
        android:layout_weight="1"
        android:layout_width="20dp"
        android:layout_height="100dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:singleLine="true"
        android:textSize="12sp"
        android:gravity="center_horizontal"
        android:text="图书名"
        android:id="@+id/collect_book_name"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:singleLine="true"
        android:textSize="12sp"
        android:gravity="center_horizontal"
        android:text="作者"
        android:id="@+id/collect_book_author"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:singleLine="true"
        android:textSize="12sp"
        android:gravity="center_horizontal"
        android:text="类型"
        android:id="@+id/collect_book_type"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:singleLine="true"
        android:textSize="12sp"
        android:gravity="center_horizontal"
        android:text="价格"
        android:id="@+id/collect_book_pice"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:singleLine="true"
        android:textSize="12sp"
        android:gravity="center_horizontal"
        android:text="评分"
        android:id="@+id/collect_book_rank"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:singleLine="false"
        android:textSize="12sp"
        android:gravity="center_horizontal"
        android:text="收藏时间"
        android:id="@+id/collect_time"/>


</LinearLayout>