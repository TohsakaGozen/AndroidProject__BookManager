<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.administrator.bookmanager.admin.qiantai_admin.borrowActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="left"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="商品图片 ："
            android:textSize="18sp" />
        <ImageView
            android:id="@+id/borrow_bookimg"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:layout_marginRight="50dp"
            android:src="@drawable/head"
            >
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=" I S B N ："
            android:textSize="18sp" />

        <TextView
            android:id="@+id/borrow_bookid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:inputType="number"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890*/@#$%^"
            android:layout_weight="3"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="书      名 ："
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/borrow_bookname"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="类      别 ："
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/borrow_booktype"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="作      者 ："
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/borrow_bookwriter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="出 版 社 ："
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/borrow_bookpublicer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="价      格 ："
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/borrow_bookprice"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="评      分 ："
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/borrow_bookrank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="简      介 ："
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/borrow_bookcomment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:text="评论者"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.5"
            android:singleLine="true"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:text="评论内容"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="false"
            android:textSize="12sp"
            android:gravity="center_horizontal"
            android:text="评论时间"/>
    </LinearLayout>

    <ListView
        android:id="@+id/rem_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"></ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:layout_weight="1"
            android:id="@+id/borroe_bt"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:text="借阅"
            android:textColor="#37302F"
            android:textSize="20sp"
            android:background="@drawable/bg_button_blue_gradient"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/collect_bt"
            android:background="@drawable/bg_button_blue_gradient"
            android:textColor="#37302F"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_margin="10dp"
            android:layout_height="40dp"
            android:text="收藏"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/remark_bt"
            android:background="@drawable/bg_button_blue_gradient"
            android:textColor="#37302F"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="评论"
            />
        <Button
            android:layout_weight="1"
            android:id="@+id/borrow_back_bt"
            android:background="@drawable/bg_button_blue_gradient"
            android:textColor="#37302F"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="返回"
            />
    </LinearLayout>

</LinearLayout>
